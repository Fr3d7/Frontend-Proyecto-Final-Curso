pipeline {
  agent any

  options {
    timestamps()
    ansiColor('xterm')
    disableConcurrentBuilds()
    skipDefaultCheckout(true)   // evita checkout impl√≠cito
  }

  environment {
    CI = ''                         // CRA: no tratar warnings como errores
    NODE_ENV = 'production'
    NODE_OPTIONS = "--max_old_space_size=4096"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
        script {
          @NonCPS
          def detectEnv = {
            def n = (env.JOB_NAME ?: '').toLowerCase()
            if (n.contains('prod')) return 'PROD'
            if (n.contains('qa'))   return 'QA'
            return (env.BRANCH_NAME ?: 'DEV')
          }
          env.EFFECTIVE_BRANCH = detectEnv()
          echo "üì• Rama/entorno efectivo: ${env.EFFECTIVE_BRANCH}"
        }
      }
    }

    stage('Install dependencies') {
      steps {
        echo "üì¶ npm ci (o npm install)"
        bat 'npm ci || npm install'
      }
    }

    stage('Run tests (coverage)') {
      steps {
        echo "üß™ npm test -- --coverage --watchAll=false --ci --passWithNoTests"
        bat 'npm test -- --coverage --watchAll=false --ci --passWithNoTests'
      }
      post {
        unsuccessful { echo "‚ùå Fallaron las pruebas unitarias" }
        success      { echo "‚úÖ Pruebas unitarias OK" }
      }
    }

    stage('Build app') {
      steps {
        echo "üèó  npm run build"
        bat '''
          set CI=
          npm run build
        '''
      }
    }

    stage('SonarQube Analysis') {
      when { expression { env.EFFECTIVE_BRANCH in ['DEV','QA','PROD'] } }
      steps {
        echo "üîç Enviando an√°lisis a SonarQube‚Ä¶"
        withSonarQubeEnv('sonar-local') { // nombre EXACTO del servidor en Manage Jenkins > SonarQube servers
          withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
            script {
              def scannerHome = tool 'sonar-scanner-win' // nombre EXACTO del Tool en Global Tool Configuration
              def pKey  = "frontend-proyecto-final-${env.EFFECTIVE_BRANCH}"
              // ‚ö†Ô∏è SIN par√©ntesis ni espacios sin comillas:
              def pName = "frontend-proyecto-final-${env.EFFECTIVE_BRANCH}"

              bat """
                "${scannerHome}\\bin\\sonar-scanner.bat" ^
                  -D"sonar.projectKey=${pKey}" ^
                  -D"sonar.projectName=${pName}" ^
                  -D"sonar.sources=src" ^
                  -D"sonar.sourceEncoding=UTF-8" ^
                  -D"sonar.javascript.lcov.reportPaths=coverage\\lcov.info" ^
                  -D"sonar.token=%SONAR_TOKEN%"
              """
            }
          }
        }
      }
    }

    stage('Quality Gate') {
      when { expression { env.EFFECTIVE_BRANCH in ['DEV','QA','PROD'] } }
      steps {
        timeout(time: 2, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: false
        }
      }
    }

    stage('Package artifact') {
      when { expression { env.EFFECTIVE_BRANCH == 'PROD' } }
      steps {
        echo "üì¶ Archivando artefactos"
        archiveArtifacts artifacts: 'build/**', fingerprint: true, onlyIfSuccessful: true
      }
    }

    stage('Deploy to PROD') {
      when { expression { env.EFFECTIVE_BRANCH == 'PROD' } }
      steps {
        echo "üöÄ Despliegue a PRODUCCI√ìN (placeholder)"
      }
    }
  }

  post {
    success { echo "‚úÖ Pipeline OK en ${env.EFFECTIVE_BRANCH}" }
    failure { echo "‚ùå Pipeline FAIL en ${env.EFFECTIVE_BRANCH}" }
    always  { echo "üèÅ Fin de ejecuci√≥n" }
  }
}
